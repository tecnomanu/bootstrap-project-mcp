{
	"name": "bootstrap-project-mcp",
	"version": "1.0.1",
	"description": "MCP Server for generating complete projects using templates and guided prompts. Supports multiple stacks: MCP, React, Astro, NestJS.",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"bootstrap-project-mcp": "./dist/index.js"
	},
	"files": [
		"dist/**/*",
		"README.md",
		"package.json"
	],
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && cp -r src/stacks dist/ && chmod +x dist/index.js || true",
		"prepublishOnly": "npm run build",
		"pack": "npm pack",
		"start": "node dist/index.js",
		"clean": "rm -rf dist",
		"install:global": "npm run build && npm install -g ./*.tgz",
		"inspector": "npx @modelcontextprotocol/inspector npx bootstrap-project-mcp",
		"lint": "eslint src --ext .ts",
		"test": "jest"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.5",
		"dotenv": "^16.3.1",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.2",
		"@semantic-release/npm": "^12.0.1",
		"@types/jest": "^29.0.0",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.0.0",
		"jest": "^29.0.0",
		"semantic-release": "^24.2.3",
		"tsx": "^4.0.0",
		"typescript": "^5.0.0"
	},
	"keywords": [
		"bootstrap",
		"generator",
		"template",
		"project-generator",
		"mcp",
		"model-context-protocol",
		"react",
		"astro",
		"nestjs",
		"claude",
		"ai",
		"typescript",
		"nodejs"
	],
	"author": "Bootstrap Project Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/tecnomanu/bootstrap-project-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/tecnomanu/bootstrap-project-mcp/issues"
	},
	"homepage": "https://github.com/tecnomanu/bootstrap-project-mcp#readme",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
